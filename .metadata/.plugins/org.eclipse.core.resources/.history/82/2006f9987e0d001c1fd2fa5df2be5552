#ifndef MATEMATICA_H_
#define MATEMATICA_H_


/// @brief Recibe dos enteros, los suma y devuelve el resultado
///
/// @param numeroUno - primer numero a sumar
/// @param numeroDos - segundo numero a sumar
/// @return la suma de los numeros recibidos
int Sumar(int numeroUno, int numeroDos);

/// @brief Recibe dos enteros, los resta y devuelve el resultado
///
/// @param numeroUno - primer numero a restar
/// @param numeroDos - segundo numero a restar
/// @return la resta de los numeros recibidos
int Restar(int numeroUno, int numeroDos);

/// @brief Recibe dos enteros, los multiplica y devuelve el resultado
///
/// @param numeroUno - primer numero a multiplicar
/// @param numeroDos - segundo numero a multiplicar
/// @return la multiplicacion de los numeros recibidos
int Multiplicar(int numeroUno, int numeroDos);


/// @brief Recibe dos enteros, los divide y devuelve el resultado
///
/// @param numeroUno - primer numero a dividir
/// @param numeroDos - segundo numero a dividir
/// @return la division de los numeros recibidos
int Dividir(int numeroUno, int numeroDos);


/// @brief recibe un numero, calcula su factorial y lo devuelve
///
/// @param numero - numero a calcular factorial
/// @return el factorai del numero recibido
int Factorial(int numero);

#endif /* MATEMATICA_H_ */
